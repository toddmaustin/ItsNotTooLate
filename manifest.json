{
  "manifest_version": 3,
  "name": "Gmail Apology Extension",
  "version": "1.2",
  "description": "Adds Compose w/ Apology and Reply w/ Apology buttons that prepend a late/terse apology into Gmail drafts.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}

